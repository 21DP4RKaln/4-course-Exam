{
    "crons": [
      {
        "path": "/api/cron/reset-views",
        "schedule": "0 0 1 * *"
      }
    ],
    "build": {
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=3072",
        "NEXT_WEBPACK_CONCURRENCY": "1"
      }
    },
    "functions": {
      "app/api/**": {
        "maxDuration": 30
      }
    }
  }